{
  "name": "echo-music-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test-request": "jest test/request.ts --detectOpenHandles",
    "test-api": "jest test/api.ts --detectOpenHandles",
    "dev": "nodemon",
    "build": "rm -rf dist/* && swc src --out-dir dist",
    "start": "rm -rf dist/* && swc src --out-dir dist && node --experimental-specifier-resolution=node dist/app.js",
    "start:docker": "docker build --tag echo-music-api . && docker run -d -p 3001:3001 echo-music-api"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "NeteaseCloudMusicApi": "^4.8.7",
    "axios": "^1.2.2",
    "date-fns": "^2.29.3",
    "koa": "^2.14.1",
    "koa-body": "^6.0.1",
    "koa-logger": "^3.2.1",
    "md5": "^2.3.0",
    "redis": "^4.5.1",
    "simplify-chinese": "^1.2.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.59",
    "@swc/core": "^1.3.26",
    "@swc/jest": "^0.2.24",
    "@types/jest": "^29.2.5",
    "@types/koa": "^2.13.5",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/md5": "^2.3.2",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "chokidar": "^3.5.3",
    "eslint": "^8.31.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.3.1",
    "supertest": "^6.3.3",
    "typescript": "*"
  },
  "imports": {
    "@/*": [
      "src/*",
      "dist/*"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "rm -rf dist/* && swc src --out-dir dist && node --experimental-specifier-resolution=node dist/app.js --dev",
    "ext": "ts, js"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageProvider": "v8",
    "testMatch": [
      "**/test/**.[jt]s"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@src$": "<rootDir>/src"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "@swc/jest"
      ]
    },
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testTimeout": 30000
  }
}
